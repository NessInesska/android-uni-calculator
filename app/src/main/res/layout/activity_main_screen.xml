<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen">

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btn7"
        android:text="9" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_above="@+id/btn6"
        android:layout_toEndOf="@+id/btn9"
        android:text="8" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_above="@+id/btn6"
        android:layout_toEndOf="@+id/btn8"
        android:text="7" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_above="@+id/btn3"
        android:layout_alignParentStart="true"
        android:text="6" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/btn6"
        android:layout_toEndOf="@+id/btn9"
        android:text="5" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/btn6"
        android:layout_toEndOf="@+id/btn8"
        android:text="4" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btn2"
        android:text="3" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/btn1"
        android:layout_toEndOf="@+id/btn9"
        android:text="2" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_above="@+id/btn0"
        android:layout_toEndOf="@+id/btn8"
        android:text="1" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnDecimal"
        android:text="0" />

    <Button
        android:id="@+id/btnDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnPlus"
        android:layout_toEndOf="@+id/btn8"
        android:text="," />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="102dp"
        android:layout_height="59dp"
        android:layout_above="@+id/btn6"
        android:layout_alignStart="@+id/btnMultiply"
        android:text="/" />

    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="102dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btn9"
        android:layout_toEndOf="@+id/btn7"
        android:text="x" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="103dp"
        android:layout_height="62dp"
        android:layout_below="@+id/btn6"
        android:layout_toEndOf="@+id/btn7"
        android:text="-" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="16dp"
        android:text="+" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="102dp"
        android:layout_height="59dp"
        android:layout_above="@+id/btn9"
        android:layout_toEndOf="@+id/btn7"
        android:text="=" />

    <Button
        android:id="@+id/btnPercent"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_above="@+id/btn9"
        android:layout_alignEnd="@+id/btn7"
        android:text="%" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="176dp"
        android:layout_height="59dp"
        android:layout_above="@+id/btn9"
        android:layout_alignParentStart="true"
        android:text="AC" />
</RelativeLayout>